<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <io.cjl.app.widget.TitleToolBar
            android:id="@+id/v_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title='弹窗演示'
            tools:ignore="MissingConstraints" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/v_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            android:fitsSystemWindows="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_title_bar"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                        android:id="@+id/btn_alter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="普通弹窗"
                        android:layout_marginTop="10dp"
                        />

                <Button
                        android:id="@+id/btn_alter1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="普通弹窗"
                        android:layout_marginTop="10dp"
                />

                <Button
                        android:id="@+id/btn_alter_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="竖直弹窗"
                        android:layout_marginTop="10dp"
                />

                <Button
                        android:id="@+id/btn_alter_vertical1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="竖直弹窗"
                        android:layout_marginTop="10dp"
                />

                <Button
                        android:id="@+id/btn_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="底部弹窗"
                        android:layout_marginTop="10dp"
                />

                <Button
                        android:id="@+id/btn_bottom1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="底部弹窗"
                        android:layout_marginTop="10dp"
                />

                <Button
                        android:id="@+id/btn_custom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="自定义弹窗"
                        android:layout_marginTop="10dp"
                />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>